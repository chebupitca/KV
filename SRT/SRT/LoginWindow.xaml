<Window x:Class="SRT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRT"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" FontWeight="Bold" >Вход</TextBlock>

        <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="32,0,0,0" FontSize="20">Логин:</TextBlock>
        <TextBox Name="UsernameBox" Grid.Row="1" Height="25" Width="250" Margin="152,38,48,23"></TextBox>
        <TextBlock Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="32,0,0,0" FontSize="20">Пароль:</TextBlock>
        <TextBox Name="PasswordBox" Grid.Row="2" Height="25" Width="250" Margin="152,38,48,23"></TextBox>

        <Button x:Name="Login" Content="Войти" Grid.Row="3" Width="70" Height="30" FontSize="20" Click="Login_Click"/>
    </Grid>
</Window>
