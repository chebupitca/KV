<Window x:Class="SRT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SRT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Apartments">
                <DataGrid x:Name="ApartmentDataGrid" AutoGenerateColumns="True"/>
            </TabItem>

            <TabItem Header="Payments">
                <DataGrid x:Name="PaymentDataGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>

            <TabItem Header="Services">
                <DataGrid x:Name="ServiceDataGrid" AutoGenerateColumns="True"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
